<table class='table table-striped input-lg'>
  <thead>
    <tr>
      <th>User</th>
      <th>Profile Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% user_profiles.each do | profile | %>
    <tr>
      <%= content_tag :td, style: 'width:25%;' do %>
        <%= content_tag :i, nil, class: 'fa fa-user fa-lg pull-left' do %>
          &nbsp;Anonymous
        <% end %>
      <% end %>
      <%= content_tag :td, style: 'width:50%;' do %>
        <% css_class = profile.type.match(/recruiter/i) ? 'label-success' : 'label-primary' %>
        <%= render partial: 'shared/profile_type_label', locals: { profile_type: profile.type} %>
      <% end %>
      <%= content_tag :td, style: 'width:25%;' do %>
        <%= link_to profile_path(profile), { class: 'pull-left btn btn-view transparent', title: 'View profile' } do %>
          <%= content_tag :i, nil, class: 'fa fa-eye fa-2x' %>
        <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>