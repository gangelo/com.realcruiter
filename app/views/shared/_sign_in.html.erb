
<%= form_for :user, :url => user_session_path,
                    :builder => InlineErrorsBuilder,
                    :method => :POST,
                    :role => :form do |f| %>
  <div class='row'>
    <div class='col-sm-2'>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Email or username' %>
    </div>

    <div class='col-sm-2'>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    </div>  

    <div class='col-sm-2 actions'>
      <%= submit_tag 'Log In', class: 'btn _btn-sm btn-default special-button' %>
    </div>
  </div>


  <div class='row'>
    <div class='col-sm-2'>
      <%= label_tag :keep_signed_in, class: 'checkbox nowrap' do %>
        <%= check_box_tag :keep_signed_in, params[:keep_signed_in], false %>
        Keep me logged in
      <% end %>
    </div> 

    <div class='col-sm-2'>
      <%= link_to '#', class: 'underline nowrap' do %>
         Forgot your password?
      <% end %>
    </div>  

    <div class='col-sm-2'>&nbsp;</div>

  </div>
<% end %>