<% content_for :head do %>
<% end %>

<div class='container'>
  <div class='row'>
    <div class='col-lg-12'>
        <%= render partial: 'shared/page_header', object: 'View Profile' %>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-lg-12 form-group form-group-lg'>
      <%= content_tag :i, nil, class: 'fa fa-user fa-2x pull-left' do %>
        &nbsp;Anonymous
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-lg-12 form-group form-group-lg'>
      <div>
        <h3><%= render partial: 'shared/profile_type_label', locals: { profile_type: @user_profile.type} %></h3>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-lg-12 form-group form-group-lg'>
      <%= render partial: 'shared/skill', collection: @user_profile.all_skills, as: :skill %>
    </div>
  </div>
</div>